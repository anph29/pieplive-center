
#:import icon kivy.garden.iconfonts.icon

<RCVItemMixer>:
    audio_status : audio_status
    audio_volume : audio_volume
    spacing:3
    padding:5,3,5,3
    Label:
        color: 1.0,1.0,1.0,1
        font_size: 12
        text: root.name
        text_size: self.width, 24
        valign: 'center'
        halign: 'justify'
        markup: True
    ProgressBar:
        id:audio_status
        size_hint: 1,None
        height:10
        padding:0,0,5,0
        max: 100
        value: 0
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1,None
        height:30
        Label:
            #size_hint: None,1
            #width:16
            text:icon('icon-emo-happy')
            color: 1,1,1,1
            text_size: self.width, 16
            valign: 'center'
            halign: 'justify'
            markup: True

        Slider:
            id: audio_volume
            min: 0
            max: 100
            value: root.volume
            size_hint:None,1
            width: self.parent.width - 16
            value_track:False
            value_track_color:1, 0, 0, 1
            on_value: root.onChangeVolume(int(self.value))