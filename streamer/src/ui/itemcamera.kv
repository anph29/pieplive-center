#:import helper src.utils.helper
<ItemCamera>:
    kvcam:kvcam
    size_hint: 1,1
    pos_hint: {'x':0,'y':0}
    spacing:5
    KivyCameraLow:
        id:kvcam
        size_hint: 1, 1
        pos_hint:{'x':0, 'y':0}

    Image:
        size_hint:((0,0),(.4,.4))[root.selected]
        pos_hint: {'right':1,'top':1}
        source: helper._ICONS_PATH + 'rect-chk-B.png'

    BoxLayout:
        orientation:'horizontal'
        size_hint: 1, .25
        pos_hint:{'x':0, 'y':0}
        padding:5
        canvas.before:
            Color:
                rgba: (0, 0, 0, .75)
            Rectangle:
                pos: self.pos
                size: self.size

        ImageButton:
            size_hint:.15,1
            pos_hint:{'top':1, 'right':1}
            source: (helper._ICONS_PATH + 'play-w.png',helper._ICONS_PATH + 'pause.png')[root.kvcam.is_playing]
            on_release:(root.kvcam._play, root.kvcam._pause)[root.kvcam.is_playing]()

        Label:
            size_hint: .7, 1
            text: root.name
            font_size:13
            color:1,1,1,1
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            shorten: True

        ImageButton:
            size_hint:.15,1
            opacity:(1,0)[root.selected]
            pos_hint:{'top':1, 'right':1}
            source: helper._ICONS_PATH+'trash.png'
            on_release:root.open_confirm_rmv()

    #Buffer
    BoxLayout:
        size_hint: ((0,0), (None, .02))[root.kvcam.resource_type == 'VIDEO']
        width: root.kvcam.buffer_rate * root.size[0]
        pos_hint:{'x':0, 'y':0}
        canvas.before:
            Color:
                rgb: .23, .69, .85
            Rectangle:
                pos: self.pos
                size: self.size

    #F5
    BoxLayout:
        canvas.before:
            Color:
                rgba: (0, 0, 0, .5)
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint: ((1,1), (0,0))[root.kvcam.is_playing]
        pos_hint:{'x':0, 'y':0}
        ImageButton:
            size_hint:.2,.2
            pos_hint:{'x':.4,'y':.6}
            source: helper._ICONS_PATH+'play.png'
            on_press:root.kvcam._play()