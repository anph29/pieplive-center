#:import helper src.utils.helper
<ItemLabel>:
    kvcam:kvcam
    size_hint: 1,1
    canvas.before:
        Color:
            rgb:((.0,.0,.0),(.25,.25,.25))[root.selected]
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1, 1
        pos_hint:{'x':0, 'y':0}
        spacing:5
        padding: 5,0,0,0
        LabelCamera:
            id:kvcam
            size_hint: None, 1
            font_size:13
            color:1,1,1,1
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            shorten: True
        Widget:
        ImageButton:
            size_hint:None,1
            width:16
            source: helper._ICONS_PATH+'ic_clock.png'
            on_release:root.add_to_schedule()
        ImageButton:
            size_hint:None,1
            width:16
            opacity:(1,0)[root.selected]
            source: helper._ICONS_PATH+'trash.png'
            on_release:root.open_confirm_rmv()
