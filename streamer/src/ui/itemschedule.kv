#:import helper src.utils.helper
<ItemSchedule>:
    kvcam:kvcam
    size_hint: 1,1
    #pos_hint: {'x':0,'y':0}
    canvas.before:
        Color:
            rgb:((.0,.0,.0),(.25,.25,.25))[root.selected]
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1, 1
        pos_hint:{'x':0, 'y':0}
        spacing:5
        ImageButton:
            size_hint:None,1
            width: 12
            pos_hint:{'top':1, 'right':1}
            source: helper._ICONS_PATH+'checked.png'
            opacity: (1,1)[root.kvcam.is_playing]
        Label:
            size_hint:None,1
            width: 54
            text:"09:32:30"
            font_size: 12
            color:1,1,1,1
        LabelCamera:
            id:kvcam
            size_hint: .7, 1
            font_size:13
            color:1,1,1,1
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            shorten: True
        ImageButton:
            size_hint:.15,1
            opacity:(1,0)[root.selected]
            pos_hint:{'top':1, 'right':1}
            source: helper._ICONS_PATH+'trash.png'
            on_release:root.open_confirm_rmv()
