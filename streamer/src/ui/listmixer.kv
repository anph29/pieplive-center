<RCVItemMixer>:
    audio_status : audio_status
    audio_volume : audio_volume
    spacing:3
    padding:5,3,5,3
    canvas.before:
        Color: 
            rgb:(.15,.15,.15)
        Rectangle:
            size:self.size
            pos:self.pos
    Label:
        color: 1.0,1.0,1.0,1
        font_size: 12
        text: root.name
        text_size: self.width, 24
        valign: 'center'
        halign: 'justify'
        markup: True
    ProgressBar:
        id:audio_status
        size_hint: 0,0
        height:0
        width:0
        padding:0,0,5,0
        max: 100
        value: 0
        opacity:0
    BoxLayout:
        orientation:'horizontal'
        size_hint: 1,None
        height:30
        ImageButton:
            size_hint: None, 1
            width: 16
            source:'src/icons/icon-volume.png'

        Slider:
            id: audio_volume
            min: 0
            max: 100
            value: root.volume
            size_hint:None,1
            width: self.parent.width - 16
            value_track:False
            value_track_color:1, 0, 0, 1
            on_value: root.onChangeVolume(int(self.value))