
<MainView>:
    mainStream: mainStream
    right_content: right_content
    bottom_left:bottom_left
    control:control
    listMixer: bottom_left.list_mixer
    canvas.before:
        Color:
            rgb:.12, .15, .18
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:#MainWrapper
        orientation:'horizontal'
        size_hint: None,None
        size: root.width, root.height
        cols:2
        pos: 0,0
        BoxLayout:#LeftContent
            size_hint_x: None
            size_hint_y: 1
            width:root.width - 200
            spacing:5
            padding:5
            RelativeLayout:
                size_hint:1, None
                height: (self.parent.height - 220)
                canvas.before:
                    Color:
                        rgb:.12, .15, .18
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MainStream:
                    id: mainStream
                    size:self.f_width, self.f_height
                    # anchor_x:'center'
                    # anchor_y:'center'
                    pos:0,0
                      
            Control:
                id: control
                size_hint: 1, None
                height: 40
                
            BottomLeft:
                id:bottom_left
                size_hint:1,None
                height: 160
                rows:1
                cols:3
                spacing:5

        RightContent:
            id:right_content
            size_hint_x: None
            size_hint_y: 1
            width:200