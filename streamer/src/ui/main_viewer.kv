#:kivy 1.10.1
#File name: piepme.py

<MainView>:
    right_content: right_content
    control:control
    canvas.before:
        Color:
            rgb:.12, .15, .18
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:#MainWrapper
        orientation: 'vertical'
        size_hint: 1,1
        size: root.width, root.height
        pos: 0, 0

        RightContentViewer:
            id:right_content
            size_hint:1, None
            height: self.parent.size[1] - 40

        ControlViewer:
            id: control
            size_hint: 1, None
            height: 40