#:import helper src.utils.helper
<RightContent>:
    tab_camera:tab_camera
    tab_presenter:tab_presenter
    tab_schedule:tab_schedule
    tab_width: self.size[0] / 3
    size_hint:1,1
    pos_hint:{'y': 0, 'center_x': .5}
    do_default_tab: False
    TabbedPanelItem:
        text: 'Media source'
        Box25:
            padding:2
            TabCamera:
                id:tab_camera
                canvas.before:
                    Color:
                        rgb: .0,.0,.0
                    Rectangle:
                        pos: self.pos
                        size: self.size
            
    TabbedPanelItem:
        text:'Presenter'
        Box25:
            padding:2
            TabPresenter:
                id:tab_presenter
                canvas.before:
                    Color:
                        rgb: .0,.0,.0
                    Rectangle:
                        pos: self.pos
                        size: self.size
    TabbedPanelItem:
        text:'Schedule'
        Box25:
            padding:2
            TabSchedule:
                id:tab_schedule
                canvas.before:
                    Color:
                        rgb: .0,.0,.0
                    Rectangle:
                        pos: self.pos
                        size: self.size

<TabCamera>:
    ls_camera:ls_camera
    ListCamera:
        id:ls_camera
        viewclass: 'ItemLabel'
        size_hint: 1,None
        height: int(self.parent.height - 30)
        scroll_type: ['bars', 'content']
        bar_width: 10
        GridCamera:
            cols:1
            spacing:1
            padding:1
            default_size_hint: 1, None
            default_size: None, 30
            multiselect: False
            touch_multiselect: False
            size_hint_y: None
            height: self.minimum_height

    BoxLayout:
        size_hint:None, None
        pos_hint:{'x':0,'right':1  }
        height:45
        width:45
        ImageButton:
            source: helper._ICONS_PATH + 'addW-sq.png'
            pos_hint:{'x':0,'y':0}
            size_hint:1,1
            on_release: root.open_add_camera()

<TabPresenter>:
    ls_presenter:ls_presenter
    ListPresenter:
        id:ls_presenter
        viewclass: 'ItemLabel'
        size_hint:1,None
        height: int(self.parent.height - 30)
        scroll_type: ['bars', 'content']
        bar_width: 10
        GridCamera:
            cols:1
            spacing:1
            padding:1
            default_size_hint: 1, None
            default_size: None, 30
            multiselect: False
            touch_multiselect: False
            size_hint_y: None
            height: self.minimum_height

